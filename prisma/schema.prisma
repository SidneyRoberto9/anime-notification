generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Notification {
  id          String   @id
  title       String
  platform    String
  platformUrl String
  createdAt   DateTime @default(now())
}

model Chat {
  id         String @id
  telegramId String
  firstName  String
}
